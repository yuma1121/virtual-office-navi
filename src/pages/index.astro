---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const allPosts = await getCollection('blog');
const recentPosts = allPosts
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 10);

const categories = [
  {
    slug: 'comparison',
    name: '比較・ランキング',
    icon: '<svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 6l3 1m0 0l-3 9a5.002 5.002 0 006.001 0M6 7l3 9M6 7l6-2m6 2l3-1m-3 1l-3 9a5.002 5.002 0 006.001 0M18 7l3 9m-3-9l-6-2m0-2v2m0 16V5m0 16H9m3 0h3" /></svg>',
  },
  {
    slug: 'review',
    name: 'サービスレビュー',
    icon: '<svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z" /></svg>',
  },
  {
    slug: 'area',
    name: 'エリア別おすすめ',
    icon: '<svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" /><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" /></svg>',
  },
  {
    slug: 'howto',
    name: '使い方・手続き',
    icon: '<svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01" /></svg>',
  },
  {
    slug: 'concern',
    name: 'お悩み解決',
    icon: '<svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" /></svg>',
  },
];

const categoryColors: Record<string, string> = {
  comparison: 'bg-blue-500',
  review: 'bg-emerald-500',
  howto: 'bg-purple-500',
  area: 'bg-orange-500',
  concern: 'bg-rose-500',
};
---

<BaseLayout
  title="バーチャルオフィスナビ | フリーランス・個人事業主のためのバーチャルオフィス徹底比較"
  description="バーチャルオフィスの料金・サービスを徹底比較。GMOオフィスサポート、レゾナンス、NAWABARI等の口コミ・評判をフリーランスが実体験ベースでレビュー。"
>
  <!-- Hero Section -->
  <section class="border-b">
    <div class="container-wide py-16 md:py-24">
      <div class="max-w-3xl mx-auto text-center">
        <div
          class="inline-flex items-center gap-2 text-sm text-blue-700 bg-blue-50 px-3 py-1 rounded-full mb-6"
        >
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"
            ><path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg
          >
          GMOオフィスサポート利用者が運営
        </div>
        <h1 class="text-4xl md:text-5xl font-bold tracking-tight text-gray-900 mb-4">
          バーチャルオフィスを<br class="hidden md:inline" />徹底比較
        </h1>
        <p class="text-lg text-gray-500 mb-8 max-w-2xl mx-auto">
          フリーランス・個人事業主のためのバーチャルオフィス情報サイト。料金・機能・口コミを実体験ベースで比較します。
        </p>
        <div class="flex flex-col sm:flex-row gap-3 justify-center">
          <a
            href="/blog/virtual-office-osusume"
            class="inline-flex items-center justify-center px-6 py-3 bg-blue-600 text-white font-medium rounded-lg hover:bg-blue-700 transition-colors"
          >
            おすすめ比較を見る
            <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"
              ><path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M9 5l7 7-7 7"></path></svg
            >
          </a>
          <a
            href="#recent-posts"
            class="inline-flex items-center justify-center px-6 py-3 border border-blue-200 text-blue-600 font-medium rounded-lg hover:bg-blue-50 transition-colors"
          >
            最新記事を見る
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section class="border-b bg-gray-50/50">
    <div class="container-wide py-12">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="flex gap-4">
          <div
            class="flex-shrink-0 w-10 h-10 rounded-lg bg-blue-600 text-white flex items-center justify-center"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"
              ><path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path></svg
            >
          </div>
          <div>
            <h3 class="font-semibold text-gray-900 mb-1">実体験ベース</h3>
            <p class="text-sm text-gray-500">GMOオフィスサポートを実際に利用中の筆者が徹底解説</p>
          </div>
        </div>
        <div class="flex gap-4">
          <div
            class="flex-shrink-0 w-10 h-10 rounded-lg bg-blue-600 text-white flex items-center justify-center"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"
              ><path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"
              ></path></svg
            >
          </div>
          <div>
            <h3 class="font-semibold text-gray-900 mb-1">10社以上を比較</h3>
            <p class="text-sm text-gray-500">料金・機能・口コミを多角的に分析</p>
          </div>
        </div>
        <div class="flex gap-4">
          <div
            class="flex-shrink-0 w-10 h-10 rounded-lg bg-blue-600 text-white flex items-center justify-center"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"
              ><path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M13 10V3L4 14h7v7l9-11h-7z"></path></svg
            >
          </div>
          <div>
            <h3 class="font-semibold text-gray-900 mb-1">目的別に提案</h3>
            <p class="text-sm text-gray-500">
              フリーランス・法人登記・ネットショップなど用途に合わせて
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Categories Section -->
  <section class="py-12">
    <div class="container-wide">
      <h2 class="text-lg font-semibold text-gray-900 mb-6">カテゴリから探す</h2>
      <div class="grid grid-cols-2 md:grid-cols-5 gap-3">
        {
          categories.map((cat) => (
            <a
              href={`/category/${cat.slug}`}
              class="flex items-center gap-3 bg-white border border-gray-200 rounded-lg p-4 hover:border-blue-300 hover:bg-blue-50/50 transition-all group"
            >
              <div
                class="w-9 h-9 rounded-lg bg-blue-50 group-hover:bg-blue-100 flex items-center justify-center transition-colors"
                set:html={cat.icon}
              />
              <span class="text-sm font-medium text-gray-700">{cat.name}</span>
            </a>
          ))
        }
      </div>
    </div>
  </section>

  <!-- Recent Posts -->
  <section id="recent-posts" class="py-12 border-t">
    <div class="container-wide">
      <div class="flex items-center justify-between mb-6">
        <h2 class="text-lg font-semibold text-gray-900">最新記事</h2>
      </div>
      {
        recentPosts.length > 0 ? (
          <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-4">
            {recentPosts.map((post) => (
              <a
                href={`/blog/${post.slug}`}
                class="group block bg-white border border-gray-200 rounded-lg hover:border-blue-300 hover:shadow-sm transition-all overflow-hidden"
              >
                <div class={`h-1 ${categoryColors[post.data.category] || 'bg-gray-300'}`} />
                <div class="p-5">
                  <div class="flex items-center gap-2 mb-3">
                    <span class="text-xs font-medium text-gray-500 bg-gray-100 px-2 py-0.5 rounded">
                      {categories.find((c) => c.slug === post.data.category)?.name ||
                        post.data.category}
                    </span>
                    <time class="text-xs text-gray-400">
                      {post.data.pubDate.toLocaleDateString('ja-JP')}
                    </time>
                  </div>
                  <h3 class="font-semibold text-gray-900 leading-snug group-hover:text-blue-600 transition-colors">
                    {post.data.title}
                  </h3>
                  <p class="mt-2 text-sm text-gray-500 line-clamp-2">{post.data.description}</p>
                </div>
              </a>
            ))}
          </div>
        ) : (
          <p class="text-gray-500">記事を準備中です。</p>
        )
      }
    </div>
  </section>
</BaseLayout>
