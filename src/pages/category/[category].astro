---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const categoryNames: Record<string, string> = {
  comparison: '比較・ランキング',
  review: 'サービスレビュー',
  area: 'エリア別おすすめ',
  howto: '使い方・手続き',
  concern: 'お悩み解決',
};

export async function getStaticPaths() {
  return Object.keys({
    comparison: true,
    review: true,
    area: true,
    howto: true,
    concern: true,
  }).map((category) => ({ params: { category } }));
}

const { category } = Astro.params;
const categoryName = categoryNames[category!] || category;

const allPosts = await getCollection('blog');
const posts = allPosts
  .filter((post) => post.data.category === category)
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
---

<BaseLayout
  title={`${categoryName} | バーチャルオフィスナビ`}
  description={`バーチャルオフィスの${categoryName}に関する記事一覧`}
>
  <section class="py-12">
    <div class="container-wide">
      <h1 class="text-3xl font-bold mb-8">{categoryName}</h1>
      {posts.length > 0 ? (
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
          {posts.map((post) => (
            <a
              href={`/blog/${post.slug}`}
              class="block bg-white rounded-lg shadow-sm hover:shadow-md transition-shadow overflow-hidden border border-gray-100"
            >
              <div class="p-5">
                <h3 class="text-lg font-bold text-gray-800 leading-snug">
                  {post.data.title}
                </h3>
                <p class="mt-2 text-sm text-gray-600 line-clamp-2">
                  {post.data.description}
                </p>
                <time class="block mt-3 text-xs text-gray-400">
                  {post.data.pubDate.toLocaleDateString('ja-JP')}
                </time>
              </div>
            </a>
          ))}
        </div>
      ) : (
        <p class="text-gray-500">このカテゴリの記事はまだありません。</p>
      )}
    </div>
  </section>
</BaseLayout>
