---
import SEOHead from '../components/SEOHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import ScrollToTop from '../components/ScrollToTop.astro';
import '../styles/global.css';

const gaId = import.meta.env.PUBLIC_GA_ID;

export interface Props {
  title: string;
  description: string;
  ogImage?: string;
  canonicalUrl?: string;
  pubDate?: Date;
  updatedDate?: Date;
  isArticle?: boolean;
  breadcrumbs?: { name: string; url: string }[];
}

const { title, description, ogImage, canonicalUrl, pubDate, updatedDate, isArticle, breadcrumbs } =
  Astro.props;
---

<!doctype html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="sitemap" href="/sitemap-index.xml" />

    <!-- Google Fonts: Noto Sans JP -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Noto+Sans+JP:wght@400;500;700&display=swap"
      rel="stylesheet"
    />

    <SEOHead
      title={title}
      description={description}
      ogImage={ogImage}
      canonicalUrl={canonicalUrl}
      pubDate={pubDate}
      updatedDate={updatedDate}
      isArticle={isArticle}
      breadcrumbs={breadcrumbs}
    />

    {gaId && <script async src={`https://www.googletagmanager.com/gtag/js?id=${gaId}`} />}
    {
      gaId && (
        <script
          is:inline
          set:html={`window.dataLayer=window.dataLayer||[];function gtag(){dataLayer.push(arguments);}gtag('js',new Date());gtag('config','${gaId}');`}
        />
      )
    }
  </head>
  <body class="min-h-screen flex flex-col bg-white text-gray-800 font-sans">
    <Header />
    <main class="flex-1">
      <slot />
    </main>
    <Footer />
    <ScrollToTop />
  </body>
</html>
