---
const navItems = [
  { label: 'ホーム', href: '/' },
  { label: 'おすすめ比較', href: '/category/comparison' },
  { label: 'レビュー', href: '/category/review' },
  { label: '使い方・手続き', href: '/category/howto' },
  { label: 'エリア情報', href: '/category/area' },
  { label: 'お悩み解決', href: '/category/concern' },
];
---

<header class="bg-white border-b border-gray-200 sticky top-0 z-50">
  <div class="max-w-6xl mx-auto px-4">
    <div class="flex items-center justify-between h-16">
      <!-- Logo / Site Name -->
      <a href="/" class="flex items-center gap-2 shrink-0">
        <div class="w-8 h-8 bg-navy rounded-lg flex items-center justify-center">
          <span class="text-white font-bold text-sm">VO</span>
        </div>
        <span class="text-lg font-bold text-navy hidden sm:inline">
          バーチャルオフィスナビ
        </span>
      </a>

      <!-- Desktop Navigation -->
      <nav class="hidden lg:flex items-center space-x-1" aria-label="メインメニュー">
        {navItems.map((item) => (
          <a
            href={item.href}
            class="px-3 py-2 text-sm text-gray-600 hover:text-primary-600 hover:bg-primary-50 rounded-lg transition-colors"
          >
            {item.label}
          </a>
        ))}
      </nav>

      <!-- Mobile Menu Button -->
      <button
        id="mobile-menu-button"
        class="lg:hidden p-2 text-gray-600 hover:text-primary-600 hover:bg-gray-100 rounded-lg"
        aria-label="メニューを開く"
        aria-expanded="false"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>

    <!-- Mobile Navigation -->
    <nav
      id="mobile-menu"
      class="lg:hidden hidden pb-4"
      aria-label="モバイルメニュー"
    >
      <div class="flex flex-col space-y-1">
        {navItems.map((item) => (
          <a
            href={item.href}
            class="px-3 py-2 text-sm text-gray-600 hover:text-primary-600 hover:bg-primary-50 rounded-lg transition-colors"
          >
            {item.label}
          </a>
        ))}
      </div>
    </nav>
  </div>
</header>

<script>
  const menuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');

  menuButton?.addEventListener('click', () => {
    const isExpanded = menuButton.getAttribute('aria-expanded') === 'true';
    menuButton.setAttribute('aria-expanded', String(!isExpanded));
    mobileMenu?.classList.toggle('hidden');
  });
</script>
