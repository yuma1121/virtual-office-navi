---
const navItems = [
  { label: 'ホーム', href: '/' },
  { label: 'おすすめ比較', href: '/category/comparison' },
  { label: 'レビュー', href: '/category/review' },
  { label: '使い方・手続き', href: '/category/howto' },
  { label: 'エリア情報', href: '/category/area' },
  { label: 'お悩み解決', href: '/category/concern' },
];
---

<header class="sticky top-0 z-50 bg-white/80 backdrop-blur-sm border-b border-gray-200">
  <div class="max-w-6xl mx-auto px-4">
    <div class="flex items-center justify-between h-14">
      <a href="/" class="flex items-center shrink-0">
        <span class="text-lg font-bold tracking-tight">
          <span class="text-gray-800">スモビジ</span><span class="text-gray-800">バーチャルオフィス</span>
        </span>
      </a>

      <nav class="hidden lg:flex items-center gap-1" aria-label="メインメニュー">
        {
          navItems.map((item) => (
            <a
              href={item.href}
              class="px-3 py-1.5 text-sm text-gray-600 hover:text-blue-600 rounded-md hover:bg-blue-50 transition-colors"
            >
              {item.label}
            </a>
          ))
        }
      </nav>

      <button
        id="mobile-menu-button"
        class="lg:hidden p-2 text-gray-500 hover:text-gray-900 hover:bg-gray-100 rounded-md"
        aria-label="メニューを開く"
        aria-expanded="false"
      >
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>

    <nav id="mobile-menu" class="lg:hidden hidden pb-3" aria-label="モバイルメニュー">
      <div class="flex flex-col gap-0.5">
        {
          navItems.map((item) => (
            <a
              href={item.href}
              class="px-3 py-2 text-sm text-gray-600 hover:text-blue-600 rounded-md hover:bg-blue-50 transition-colors"
            >
              {item.label}
            </a>
          ))
        }
      </div>
    </nav>
  </div>
</header>

<script>
  const menuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');

  menuButton?.addEventListener('click', () => {
    const isExpanded = menuButton.getAttribute('aria-expanded') === 'true';
    menuButton.setAttribute('aria-expanded', String(!isExpanded));
    mobileMenu?.classList.toggle('hidden');
  });
</script>
