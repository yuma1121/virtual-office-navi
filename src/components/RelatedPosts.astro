---
import { getCollection } from 'astro:content';

export interface Props {
  category: string;
  currentSlug: string;
}

const { category, currentSlug } = Astro.props;

const allPosts = await getCollection('blog');
const relatedPosts = allPosts
  .filter((post) => post.data.category === category && post.slug !== currentSlug)
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 3);
---

{relatedPosts.length > 0 && (
  <section class="mt-12 pt-8 border-t border-gray-200">
    <h2 class="text-lg font-semibold text-gray-900 mb-6">関連記事</h2>
    <div class="grid md:grid-cols-3 gap-4">
      {relatedPosts.map((post) => (
        <a
          href={`/blog/${post.slug}`}
          class="group block rounded-lg border border-gray-200 hover:border-gray-400 bg-white transition-colors duration-200"
        >
          <div class="p-4">
            <h3 class="text-sm font-medium text-gray-900 leading-snug line-clamp-2 group-hover:text-gray-700 transition-colors">
              {post.data.title}
            </h3>
            <div class="flex items-center gap-2 mt-3">
              <time class="text-xs text-gray-400">
                {post.data.pubDate.toLocaleDateString('ja-JP')}
              </time>
            </div>
          </div>
          <div class="px-4 pb-3">
            <span class="inline-flex items-center gap-1 text-xs text-gray-500 group-hover:text-gray-700 transition-colors">
              続きを読む
              <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </span>
          </div>
        </a>
      ))}
    </div>
  </section>
)}
